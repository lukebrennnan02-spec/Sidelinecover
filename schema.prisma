generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  PHYSIO
  CLUB
  ADMIN
}

enum JobStatus {
  OPEN
  ACCEPTED
  COMPLETED
  CANCELLED
}

model User {
  id             String   @id @default(cuid())
  name           String?
  email          String   @unique
  hashedPassword String
  role           Role     @default(PHYSIO)
  createdAt      DateTime @default(now())
}
